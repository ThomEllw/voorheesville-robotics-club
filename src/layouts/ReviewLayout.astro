---
import type { CollectionEntry } from 'astro:content';
import BaseLayout from './BaseLayout.astro';
import { formatDate } from '@/utils/formatDate';
import { getReadingTime } from '@/utils/getReadingTime';

interface Props {
  review: CollectionEntry<'reviews'>;
}

const { review } = Astro.props;
const { Content } = await review.render();
const readingTime = getReadingTime(review.body);
---

<BaseLayout
  title={review.data.title}
  description={review.data.description}
  image={review.data.image}
  article={true}
  publishDate={review.data.date}
  author={review.data.author}
>
  <article class="py-12">
    <div class="container mx-auto px-4 max-w-4xl">
      <!-- Header -->
      <header class="mb-8 not-prose">
        <!-- Title -->
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
          {review.data.title}
        </h1>

        <!-- Meta -->
        <div class="flex flex-wrap items-center gap-4 text-gray-600 text-sm">
          <div class="flex items-center gap-2">
            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            <span>{review.data.author}</span>
          </div>
          <div class="flex items-center gap-2">
            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <time datetime={review.data.date.toISOString()}>
              {formatDate(review.data.date)}
            </time>
          </div>
          {review.data.rating && (
            <div class="flex items-center gap-2">
              <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.286 3.957a1 1 0 00.95.69h4.162c.969 0 1.371 1.24.588 1.81l-3.37 2.448a1 1 0 00-.364 1.118l1.287 3.957c.3.921-.755 1.688-1.539 1.118l-3.37-2.449a1 1 0 00-1.176 0l-3.37 2.449c-.784.57-1.838-.197-1.539-1.118l1.287-3.957a1 1 0 00-.364-1.118L2.063 9.384c-.783-.57-.38-1.81.588-1.81h4.162a1 1 0 00.95-.69l1.286-3.957z" />
              </svg>
              <span class="font-medium">{review.data.rating}/10</span>
            </div>
          )}
        </div>
      </header>

      <!-- Featured Image or Placeholder -->
      <div class="mb-8 rounded-lg overflow-hidden not-prose">
        {review.data.image ? (
          <div class="image-container">
            <img
              src={review.data.image}
              alt={review.data.title}
              class="w-full h-auto object-cover blog-image"
            />
          </div>
        ) : (
          <div class="w-full h-64 bg-gradient-to-br from-blue-100 to-blue-200 flex items-center justify-center">
            <div class="text-center text-blue-600">
              <svg class="h-16 w-16 mx-auto mb-2 opacity-50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <span class="text-sm font-medium opacity-50">No image available</span>
            </div>
          </div>
        )}
      </div>

      <!-- Content -->
      <div class="prose prose-lg max-w-none">
        <Content />
      </div>

      <!-- Back to Reviews -->
      <div class="mt-12 pt-8 border-t not-prose">
        <a
          href="/product-review"
          class="inline-flex items-center gap-2 text-blue-600 hover:text-blue-700 font-medium transition-colors"
        >
          <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Reviews
        </a>
      </div>
    </div>
  </article>
</BaseLayout>
