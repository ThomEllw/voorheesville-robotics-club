            </svg>
          </a>
        </div>
      </div>

      <!-- Navigation Links -->
      <div>
        <h3 class="text-sm font-semibold text-gray-900 mb-3">Navigation</h3>
        <ul class="space-y-2">
          {footerLinks.navigation.map((link) => (
            <li>
              <a href={link.href} class="text-sm text-gray-600 hover:text-gray-900 transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Resources -->
      <div>
        <h3 class="text-sm font-semibold text-gray-900 mb-3">Resources</h3>
        <ul class="space-y-2">
          {footerLinks.resources.map((link) => (
            <li>
              <a href={link.href} class="text-sm text-gray-600 hover:text-gray-900 transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
 <div class="mt-8 flex justify-center">
      <img
        src="https://ci3.googleusercontent.com/meips/ADKq_NaCEa2StScq3EjgPPAP3vRNpspgsLqOxkeMuYu7WeqktO7BU0uBLfxxf5Z_JMo1qbKH45pc2Cbt_MDKEWpPgbyBc5kCWe4i4Jf3A5rO48UXMJLlUOnWJMex6zLoVQklgI5Tob0J=s0-d-e1-ft#https://www.voorheesville.org/wp-content/uploads/2021/03/masthead-logo-rev2.png"
        alt="Voorheesville Robotics Club logo"
        class="h-40 w-auto object-contain"
        loading="lazy"
      />
    </div>
    <!-- Bottom bar -->
    <div class="mt-12 pt-8 border-t border-gray-200">
      <p class="text-center text-sm text-gray-600">
        Â© {currentYear} Voorheesville Robotics Club. Built with <a href="https://astro.build" class="text-blue-600 hover:underline">Astro</a>.
      </p>
    </div>
  </div>
</footer>
